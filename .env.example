# Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Aladhan API Configuration
# The app uses Aladhan API for prayer times calculation
# No API key required - public API
ALADHAN_API_BASE_URL=https://api.aladhan.com/v1

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App Environment (development, staging, production)
APP_ENV=development

# Enable debug mode (true/false)
DEBUG_MODE=true

# App Version (for internal tracking)
APP_VERSION=1.0.0

# =============================================================================
# LOCATION SERVICES
# =============================================================================

# Default location if GPS is not available
# These are example coordinates for Mecca, Saudi Arabia
DEFAULT_LATITUDE=21.3891
DEFAULT_LONGITUDE=39.8579
DEFAULT_CITY=Mecca
DEFAULT_COUNTRY=Saudi Arabia

# =============================================================================
# PRAYER CALCULATION SETTINGS
# =============================================================================

# Default calculation method
# Options: 1=MWL, 2=ISNA, 3=Egypt, 4=Makkah, 5=Karachi, 7=Tehran, 0=Jafari
DEFAULT_CALCULATION_METHOD=4

# Default Asr juristic method
# Options: 0=Shafi, 1=Hanafi
DEFAULT_ASR_METHOD=0

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Default notification settings
DEFAULT_NOTIFICATIONS_ENABLED=true
DEFAULT_AZAN_ENABLED=true
DEFAULT_FULL_AZAN_ENABLED=false

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Audio file paths (relative to assets)
FULL_AZAN_AUDIO_PATH=audio/azan_full.mp3
SHORT_AZAN_AUDIO_PATH=audio/azan_short.mp3

# Audio volume settings (0.0 to 1.0)
DEFAULT_AUDIO_VOLUME=0.8

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache duration in hours
PRAYER_TIMES_CACHE_DURATION=24
LOCATION_CACHE_DURATION=168

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable SSL certificate pinning (true/false)
SSL_PINNING_ENABLED=true

# Enable request timeout (in seconds)
API_REQUEST_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable file logging (true/false)
FILE_LOGGING_ENABLED=false

# Log file path (if file logging is enabled)
LOG_FILE_PATH=logs/app.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable performance monitoring (true/false)
PERFORMANCE_MONITORING=false

# Enable crash reporting (true/false)
CRASH_REPORTING=false

# Enable analytics (true/false) - Keep false for privacy
ANALYTICS_ENABLED=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test mode settings
TEST_MODE=false
MOCK_LOCATION_ENABLED=false
MOCK_PRAYER_TIMES=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
QIBLA_FEATURE_ENABLED=true
DONATION_FEATURE_ENABLED=true
HIJRI_DATE_ENABLED=true
THEME_SWITCHING_ENABLED=true

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# PLATFORM SPECIFIC
# =============================================================================

# Android specific settings
ANDROID_MIN_SDK=21
ANDROID_TARGET_SDK=34

# iOS specific settings
IOS_MIN_VERSION=12.0

# =============================================================================
# BACKUP AND SYNC
# =============================================================================

# Enable local backup (true/false)
LOCAL_BACKUP_ENABLED=true

# Backup frequency in days
BACKUP_FREQUENCY=7

# =============================================================================
# PRIVACY SETTINGS
# =============================================================================

# Data collection settings (keep all false for privacy)
COLLECT_USAGE_DATA=false
COLLECT_CRASH_DATA=false
COLLECT_PERFORMANCE_DATA=false
SHARE_ANONYMOUS_DATA=false

# =============================================================================
# CONTACT INFORMATION
# =============================================================================

# Support contact
SUPPORT_EMAIL=fgcompany.developer@gmail.com

# App store links (when published)
GOOGLE_PLAY_URL=
APP_STORE_URL=

# =============================================================================
# NOTES
# =============================================================================

# This app is designed with privacy in mind:
# - No user data is collected or transmitted
# - All data is stored locally on the device
# - No tracking or analytics by default
# - Open source for transparency
# - Uses only necessary permissions

